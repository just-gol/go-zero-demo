syntax = "v1"

type (
	ArticleRequest {
		Id int `path:id`
	}
	Article {
		Id      int    `json:"id"`
		Title   string `json:"title"`
		Content string `json:"content"`
	}
)

@server (
	group:  article
	prefix: /api/article
)
service shop-api {
	@handler GetArticleById
	get /:id (ArticleRequest) returns (CommonResponse)
}

