syntax = "v1"

type (
	AddUserRequest {
		Name string `json:"name"`
		Age  int    `json:"age,default=18"` // 默认参数
		Sex  int    `json:"sex,option=1|2"` // 可选参数
	}
	User {
		Id   int    `json:"id"`
		Name string `json:"name"`
		Age  int    `json:"age"`
		Sex  int    `json:"sex"`
	}
)

@server (
	group:  user
	prefix: /api/user
)
service shop-api {
	@handler AddUser
	post /addUser (AddUserRequest) returns (CommonResponse)

	@handler GetUser
	get /getUser returns (CommonResponse)
}

